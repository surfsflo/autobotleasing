@model ABLeasing.Web.Models.Accounts.ViewModels.ClientLoginViewModel

@{
    ViewBag.Title = "Client Signup";
}


<div id="user-signup">

    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-info">
                <div class="panel-heading text-center">Client Signup</div>
                <div class="panel-body">


                    @using (var form = Html.Bootstrap().Begin(new Form().Type(FormType.Horizontal).LabelWidthSm(4)))
                    {
                        @form.FormGroup().TextBoxFor(m => m.Client.Name).AutoFocus()
                        @form.FormGroup().TextBoxFor(m => m.Client.Email)

                        @form.FormGroup().TextBoxFor(m => m.Client.Contact1.PhoneNumber)
                        @form.FormGroup().TextBoxFor(m => m.Client.Contact1.Alias)
                        @form.FormGroup().TextBoxFor(m => m.Client.Contact1.Line1)
                        @form.FormGroup().TextBoxFor(m => m.Client.Contact1.Line2)
                        @form.FormGroup().TextBoxFor(m => m.Client.Contact1.Line3)

                        @form.FormGroup().TextBoxFor(m => m.Client.Contact1.Country)
                        @form.FormGroup().TextBoxFor(m => m.Client.Contact1.Postal)

                        @form.FormGroup().PasswordFor(m => m.RegisterModel.Password)
                        @form.FormGroup().PasswordFor(m => m.RegisterModel.ConfirmPassword)

                        @(form.FormGroup().CustomControls(
                            Html.Bootstrap().SubmitButton()
                            .Style(ButtonStyle.Primary).LoadingText("Submitting...")))

                    }


                </div>
            </div>
        </div>
    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/site/val.js"></script>
}
