<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap")
    
    @Styles.Render("~/Content/vendor")
    @Styles.Render("~/Content/app")

    @RenderSection("scripts", required: false)
    @using ABLeasing.Web.HtmlHelpers
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">

            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-target="#navbar-collapse" data-toggle="collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">AutoBotLeasing.com</a>
                </div>

                <div class="collapse navbar-collapse" id="navbar-collapse">
                    <ul class="nav navbar-nav">
                        @Html.MenuLink("How It Works", "HowItWorks", "Home")
                        @Html.MenuLink("Autobot Info", "Info", "Home")

                    </ul>
                    <form class="navbar-form navbar-right">
                        <button class="btn btn-default">Member Login</button>
                        <button class="btn btn-primary">Join Now</button>
                    </form>

@*                    <form class="navbar-form navbar-right" role="search">
                        <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                        </div>
                        <button type="submit" class="btn btn-default">Search</button>
                    </form>*@
                </div>
        </div>
       
    </nav>

    <div id="body">
        <section class="container main">
            @RenderBody()
        </section>
    </div>

</body>
</html>
