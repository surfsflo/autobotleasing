@model IEnumerable<ABLeasing.Web.Models.Category>

@{
    ViewBag.Title = "Index";
    ViewBag.Header = "Category List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section sectionButton {
    @Html.Bootstrap().ActionLinkButton("Create New", "Create").Text("Create New").Style(ButtonStyle.Primary).PrependIcon("fa fa-edit")
}

<div class="row">
    <div class="col-sm-12">


        @if (Model.Count() < 1)
        {
            using (Html.Bootstrap().Begin(new Alert().Style(AlertColor.Info)))
            {
                <p>There are currently no Categories. Click Create New to get started.</p>
            }

        }
        else
        { 
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Created)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Updated)
                            </th>
                            <th class="table-buttons">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Updated)
                                </td>
                                <td class="table-buttons">

                                    <div class="btn-group pull-right">
                                        <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                            Actions<span class="caret"></span>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a href="@Url.Action("Edit", new { id = item.CategoryID })">
                                                    <i class="fa fa-edit fa-fw"></i>
                                                    Edit
                                                </a>
                                            </li>
                                            <li>

                                                <a id="do-delete" data-url="@Url.Action("Delete", new { id = item.CategoryID })">
                                                    <i class="fa fa-power-off fa-fw"></i>
                                                    Delete
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

    
        }

    </div>
</div>

<div id="test"></div>



@section scripts {
    <script src="~/Scripts/site/modal-loader.js"></script>
    <script>
        $(function () {
            $('#do-delete').on('click', function () {
                $('#test').load($(this).data('url'), function () {
                    $('#test .modal').modal("show");
                });
                return false;
            });
        });
    </script>
}


