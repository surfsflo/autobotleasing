@model ABLeasing.Web.Models.Category


@using (var modal = Html.Bootstrap().Begin(new Modal().Id("deleteModal").Closeable()))
{
    
    @modal.Header("Edit Category")
    using (modal.BeginBody())
    {
       
        
        using (var form = Html.Bootstrap().Begin(new Form()))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true)

            @form.FormGroup().TextBoxFor(x => x.Name)
            @form.FormGroup().TextAreaFor(x => x.Description)
            @Html.HiddenFor(model => model.CategoryID)
            

            @Html.Bootstrap().SubmitButton().Text("Save").Style(ButtonStyle.Primary)
        }
    }
}