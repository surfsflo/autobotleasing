<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap")
    
    @Styles.Render("~/Content/vendor")
    @Styles.Render("~/Content/admin")

    @RenderSection("scripts", required: false)
    @Html.Partial("_html5shiv")

</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">

            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-target="#navbar-collapse" data-toggle="collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">YourMCo Admin Coolness</a>
                </div>

                <div class="collapse navbar-collapse" id="navbar-collapse">
                    <ul class="nav navbar-nav">
                        @Html.MenuLink("Equipment Categories", "Index", "Equipment")
                    </ul>
                    <div class="navbar-form navbar-right">
                        @Html.Partial("_AdminLogin")
                    </div>
                </div>
        </div>
       
    </nav>

    <div id="body">
        <section class="container main">
            @RenderBody()
        </section>
    </div>
    @Html.Partial("../Account/_LoginModalPartial")
</body>
</html>
