@using Glimpse.Mvc.AlternateType
@model ABLeasing.Web.Models.Lease

@{
    ViewBag.Title = "Lease Edit";
    ViewBag.Header = "Edit Lease " + @Model.Name;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (var form = Html.Bootstrap().Begin(new Form("Edit", "Lease")))
{
	@Html.AntiForgeryToken()

    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-7">
            @Html.ValidationSummary(true)
        </div>
    </div>
    
    
    
	@form.FormGroup().TextBoxFor(m => m.Name).AutoFocus()
	@form.FormGroup().TextBoxFor(m => m.Manufacturer)

	@form.FormGroup().DropDownListFromEnumFor(model => model.MonitorAttached)

	@form.FormGroup().TextBoxFor(m => m.Model)

	@form.FormGroup().TextBoxFor(m => m.RetailPrice).Prepend("$")
	@form.FormGroup().DropDownListFor(m => m.CategoryId, ViewBag.CategoryId as IEnumerable<SelectListItem>)

	@form.FormGroup().TextBoxFor(m => m.MaterialType)
	@form.FormGroup().TextBoxFor(m => m.PartNumber)
	
	@(form.FormGroup().CustomControls(
		Html.Bootstrap().SubmitButton()
		    .Style(ButtonStyle.Primary).LoadingText("logging...")))
    
    @Html.HiddenFor(m => m.EquipmentId)
    @Html.HiddenFor(m => m.Created)

}